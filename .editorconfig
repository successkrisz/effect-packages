# EditorConfig: https://editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Allow intentional trailing spaces in Markdown
trim_trailing_whitespace = false

# YAML files (e.g., GitHub Actions) should use spaces
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
